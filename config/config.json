{
  "interval": 0.3,
  "window":{
    "margin":{
      "top": 5,
      "right": 1200,
      "bottom": 5,
      "left": 5
    },
    "anchor":{
      "top": true,
      "right": true,
      "bottom": true,
      "left": true
    }
  },
  "widgets": [
    {
      "id": "0",
      "type": "launchers",
      "minPerLine": 7,
      "maxPerLine": 7,
      "launchers": {
        "firefox": "firefox",
        "thunderbird": "thunderbird", 
        "tabbed-st": ["tabbed","-r","2","-c","st","-w","''"],
        "wterm": "wterm",
        "alacritty": "alacritty"
      },
      "class": "launchers"
    },
    {
      "id": "1",
      "type": "text",
      "text": "<b><i>:) wonky :)</i></b>",
      "interval": 100
    },
    {
      "id": "2",
      "type": "sh",
      "cmd": "uname -a",
      "fmt": "<b>system</b>\n$OUTPUT",
      "class": "uname",
      "interval": 600
    },
    {
      "id": "3",
      "type": "sh",
      "cmd": "uptime",
      "fmt": "<b>uptime</b>\n$OUTPUT",
      "class": "uptime",
      "interval": 1
    },
    {
      "id": "4",
      "type": "sh",
      "cmd": "$HOME/.config/wonky/weather_wonky.rb",
      "fmt": "<b>weather</b>\n$OUTPUT",
      "class": "weather",
      "interval": 5
    },
    {
      "id": "5",
      "type": "top",
      "lines": 35,
      "fmt": "<b>top</b>\n$OUTPUT",
      "interval": 2
    },
    {
      "id": "6",
      "type": "sh",
      "cmd": "$HOME/.config/wonky/dfh.sh",
      "fmt": "<b>df</b>\n$OUTPUT",
      "class": "df",
      "interval": 20
    },
    {
      "id": "7",
      "maxWidthChars": 90,
      "type": "sh",
      "cmd": "fortune",
      "fmt": "<b>fortune</b>\n$OUTPUT",
      "class": "fortune",
      "escape": true,
      "interval": 20
    }
    
  ]
}
